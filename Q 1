#include <iostream>
#include <cstdlib>
using namespace std;
int main(){
	int*ptr=(int*)malloc(sizeof(double)*100);
	int *p;
	p=ptr;
	for (int i=0;i<100;i++){
		*(ptr+i)=100*(i+1);
	}
	for (int i=0;i<100;i++){
		cout<< *(ptr+i) <<endl;
	}
	ptr=(int*)realloc(ptr,sizeof(double)*200);
	for (int i=100;i<200;i++){
		*(ptr+i)=100*(i+1);
	}
	for (int i=0;i<200;i++){
		cout<< *(ptr+i) <<endl;
	}
	free(ptr);
}
