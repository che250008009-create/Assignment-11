#include <iostream>
#include <string>
#include <cstdlib>
using namespace std;
int main(){
	string a,b;
	int count=0;
	cout<< "Enter String: ";
	getline(cin,a);
	char arr[a.length()];
	for(int i=0;i<a.length();i++){
		arr[i]=a[i];
	}
	cout<< "Enter Search String: ";
	getline(cin,b);
	char search[b.length()];
	for(int i=0;i<b.length();i++){
		search[i]=b[i];
	}
	for(int i=0 ; i<a.length()-2;i++){
		if(arr[i]==search[0] && arr[i+1]==search[1] && arr[i+2]==search[2]){
			count++;
		}
	}
	cout<< count<<endl;
}
